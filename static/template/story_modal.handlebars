          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <button id="storyEdit" state="0" type="button" class="btn btn-defualt edit-button pull-right btn-xs hidden" aria-hidden="true">Edit</button>
            <h4 class="modal-title not-edit" id="storyTitle">{{name}}</h4>
            <br class="edit" />
          </div>
          <div class="modal-body">
            <form>
              <div class="row">
                <div class="col-md-12">
                  <input id="storyTitleEdit" type="text" class="edit form-control hidden" placeholder="Title" value="{{name}}">
                </div>
              </div>
              <p></p>
              <div class="row">
                <div class="col-md-3">
                <span id="storyAsignee" class="not-edit hidden"><a {{#if assignee.url}} href="{{assignee.url}}"{{else}} class="nolink" {{/if}} target="_blank">{{assignee.name}}</a></span>
                  <select id="storyAsigneeEdit" class="form-control edit" name="Asignee">
                    <option selected disabled>Asignee</option>
                    <option>User 1</option>
                    <option>User 2</option>
                    <option>User 3</option>
                  </select>
                </div>
                <div class="col-md-4">
                <span id="storySprint" class="not-edit label hidden">{{sprint}}</span>
                  <select id="storySprintEdit" class="form-control edit" name="Sprint">
                    <option selected disabled>Sprint</option>
                    {{#each sprints}}                      
                        <option {{#ifvalue @key value=../sprint }}selected{{/ifvalue}}>{{@key}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-3">    
                  <span id="storyPoints" class="not-edit label label-default hidden pull-right">{{cost}}</span>
                  <select id="storyPointsEdit" class="form-control edit" name="Story Points">
                    <option selected disabled>Story Points</option>
                    {{#each costs}}
                      <option {{#ifvalue this value=../cost }}selected{{/ifvalue}}>{{this}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <p></p>
              <div class="row">
                <div class="col-md-12">
                  <p id="storyDesc" class="not-edit">{{body}}</p>
                  <textarea id="storyDescEdit" class="edit form-control hidden" placeholder="Description">{{body}}</textarea>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <span class="help-block">Labels</span>
                  {{#each labels}}
                  <span class="label-cloud label" style="background-color:#{{color}}">{{name}}</span>
                  {{/each}}
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" id="storySubmit" class="edit btn btn-success pull-right" data-dismiss="modal">Update</button>
            <button type="button" id="storyCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" id="storyComments" class="btn btn-primary pull-left" data-toggle="collapse" data-parent="#accordion" href="#collapseComments">Comments</button>
          </div>
          <p style="margin:10px"></p>
          <div id="collapseComments" class="panel-collapse collapse out" style="padding:10px">
